<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddAdviseeViewFragment">

    <TextView
        android:id="@+id/addCourseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/advisorAddStudentMenuLabel"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="46dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="533dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="168dp">

        <TextView
            android:id="@+id/editFirstNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:labelFor="@id/editFirstName"
            android:text="@string/firstNameLabel"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/firstNameLabel"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/editMiddleNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:labelFor="@id/editMiddleName"
            android:text="@string/middleNameLabel"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editMiddleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/middleNameLabel"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/editLastNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:labelFor="@id/editLastName"
            android:text="@string/lastNameLabel"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/lastNameLabel"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/editClassYearLabel"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:labelFor="@id/editClassYear"
            android:text="@string/classYearLabel"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editClassYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="numberSigned"
            android:minHeight="48dp"
            tools:ignore="DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/editStudentIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:labelFor="@id/editStudentId"
            android:text="@string/studentIdLabel"
            android:textIsSelectable="true"
            android:textSize="16sp"
            tools:ignore="DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck" />

        <EditText
            android:id="@+id/editStudentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/doneButton3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/doneLabel"
            android:textAlignment="center"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>